@import "./normalize"

.main_top {
  padding: 0 16px;
  height: 100vh;
  padding-top: 208px;
  background-image: url(../image/pic03.jpg);
  background-size: cover;
  background-position: 0 64px;
  background-repeat: no-repeat;
  .footer {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
  }
}

.title {
  margin: 0 0 116px 0;
  text-align: center;
  color: #F2E9D8;
  text-shadow: 1px 1px 6px #262320;
}

.top_link {
  width: 100%;
  padding: 20px 0;
  font-size: 18px;
  text-align: center;
  margin-bottom: 24px;
  border-radius: 2px;
  background-color: #F24C27;
  a {
    color: #fff;
    text-decoration: none;
  }
}

//aタグの色
a {
  color: #262320;
  text-decoration: none;
}

$clearfix() {
  zoom: 1;
  &:after {
    content: '';
    display: block;
    clear: both;
  }
}

//main
.main {
  padding: 64px 0 0;
  position: relative;
}

//menuの中身
.menu_title {
  margin: 32px 0;
  text-align: center;
  font-size: 24px;
  line-height: 1;
  color: #262320;
}
.menu_item {
  display: block;
  padding: 8px 0;
  text-align: center;
  .is-current {
    a {
      color: #F24C27;
    }
  }
}

//section
.section {
  padding: 0 16px 32px;
}

//footer
.footer {
  &__text {
    margin: 0;
    padding: 8px 0;
    font-size: 11px;
    text-align: center;
    line-height: 1;
    background-color: #262320;
    color: #fff;
  }
}

//link
.links {
  &__contents {
    padding-top: 24px;
    position: relative;
    &:before {
      content: '';
      position: absolute;
      top: 0;
      right: 0;
      left: 0;
      height: 1px;
      background-color: #e6e6e6;
    }
  }
  &__content {
    padding-bottom: 32px;
  }
  &__headline {
    margin-top: 0;
    margin-bottom: 24px;
    padding-left: 16px;
    font-weight: bold;
    font-size: 18px;
    position: relative;
    &:before {
      content: '';
      display: block;
      width: 6px;
      background-color: #75BFB8;
      position: absolute;
      top: -1px;
      left: 0;
      bottom: -2px;
    }
  }
  &__name {
    border-top: 1px solid #e6e6e6;
    margin: 0;
    padding: 16px 0 16px 16px;
    &:last-child {
      border-bottom: 1px solid #e6e6e6;
    }
  }
  &__link {
    display: block;
    font-size: 13px;
    line-height: 24px;
  }
}

//Mission
.commentForm {
  margin-bottom: 16px;
  input {
    width: calc(70% - 8px);
    height: 48px;
    padding: 8px;
    margin-right: 8px;
    border: 1px solid #e6e6e6;
    border-radius: 4px;

  }
  button {
    width: 30%;
    height: 48px;
    padding: 8px;
    border-radius: 4px;
  }
}
.comment {
  margin: 0;
  padding: 16px 0 12px 12px;
  span {
    display: block;
    font-size: 16px;
    line-height: 24px;
    &:before {
      content: '・';
    }
  }
}
